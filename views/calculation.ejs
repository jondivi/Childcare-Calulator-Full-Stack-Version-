<%- include('partials/header') -%>
<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-6">
      <div class="row justify-content-between">
        <button id="calculcate" class="btn btn-primary">Calculate</button>
      </div>
    </div>
    

    <!-- database information -->
    <table  bgcolor="black" width="700">
      <!-- table row (first) -->
      <tr bgcolor="grey" align="center">
        <!-- table heading -->
        <th width="100">Name</th>
        <th width="100">Date</th>
        <th width="100">Start Time (24 hour time)</th>
        <th width="100">End Time (24 hour time)</th>
        <th width="100">Rate (USD)</th>
      </tr>
      <!-- table row (second) -->
      <tr bgcolor="lightgrey" align="center">
        <!-- table data -->
        <td id="eventName"><%= calculation.eventName %></td>
        <td id="weekDay"><%= calculation.dateOfEvent %></td>
        <td id="startTime"><%= calculation.hoursStart %></td>
        <td id="endTime"><%= calculation.hoursEnd %></td>
        <td id="rate"><%= calculation.amountUSD %></td>
      </tr>
    </table>

    <!-- Back Button -->
    <div class="col-6 mt-5">  
      <a class="btn btn-primary" href="/profile">Back</a>
    </div>

    <!-- Refresh Button -->
    <!-- <div class="col-6 mt-5">
      <a class="btn btn-primary" onclick="reload">Refresh</a>
    </div> -->

    <!-- Delete Button -->
    <div class="col-5 mt-5">
      <%if(calculation.user == user.id){ %>
        <form
          action="/calculation/deleteCalculation/<%= calculation.id %>?_method=DELETE"
          method="POST"
          class="col-3">
          <button class="btn btn-primary" type="submit">Delete entry</button>
        </form>
      <%}%>
    </div>
    <div class="col-7 mt-5" >
      <!-- Total appears here -->
      <h2 id="total"></h2>
    </div>
  </div>
</div>
<script src="/public/js/calculationFunction.js"></script>
